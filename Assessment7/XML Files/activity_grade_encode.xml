        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.024" />

    <TextView
        android:id="@+id/Attendance"
        android:layout_width="250dp"
        android:layout_height="22dp"
        android:fontFamily="sans-serif-condensed"
